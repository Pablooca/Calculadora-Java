package Cambio_De_Unidades;

public class Temperatura {

    public double Celsius_A_Fahrenheit(double temperatura) {
        return (9 / 5 * temperatura) + 32;
    }

    public double Fahrenheit_A_Celsius(double temperatura) {
        return (temperatura - 32) * 5 / 9;
    }

    public double Celsius_A_Kelvin(double temperatura) {
        return temperatura + 273.15;
    }

    public double Kelvin_A_Celsius(double temperatura) {
        return temperatura - 273.15;
    }

    public double Fahrenheit_A_Kelvin(double temperatura) {
        return (9 * (temperatura - 273.15)) / 5 + 32;
    }

    public double Kelvin_A_Fahrenheit(double temperatura) {
        return (5 * (temperatura - 32)) / 9 + 273.15;
    }
}
