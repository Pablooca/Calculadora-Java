public class Calculo_Volumenes {
  
  public double cubo (double lado) {
    return Math.pow (lado, 3);
  }
  
  public double cilindro (double radio, double altura){
    return Math.PI * Math.pow (radio, 2) * altura;
  }
  
  public double ortoedro (double a, double b, double c) {
    return a * b * c;
  }
  
  public double prisma_recto (double area_base, double altura) {
    return area_base * altura;
  }
  
  public double cono (double radio, double altura){
    return (Math.PI * Math.pow (radio, 2) * altura) / 3;
  }
  
  public double esfera (double radio){
    return (4 * Math.PI * Math.pow (radio, 3)) / 3
  }
  
  public double piramide (double area_base, double altura){
    return (area_base * altura) / 3;
  }
  
  public double tetraedro_regular (double lado){
    return (Math.sqrt (2) * Math.pow (lado, 3)) / 12;
  }
  
  public double octaedro_regular (double lado){
    return (Math.sqrt (2) * Math.pow (lado, 3)) / 3;
  }
   
  
}
